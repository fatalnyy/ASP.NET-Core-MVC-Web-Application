<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/content/site.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index" class="navbar-brand">FC Barcelona Store</a></li>
                    <li>@await Component.InvokeAsync("CategoryMenu")</li>
                    <li><a asp-controller="Feedback" asp-action="Index">Feedback</a></li>
                    <li><partial name="_LoginPartial" /></li>
                    <li>@await Component.InvokeAsync("ShoppingCartSummary")</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required:false)
</body>
</html>
